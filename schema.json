{
  "$schema": "http://json-schema.org/schema#",
  "title": "Vocabulary",
  "type": "object",
  "required": [
    "word",
    "definitions",
    "parts-of-speech"
  ],
  "properties": {
    "word": {
      "type": "string",
      "pattern": "^[A-Z][a-z]?([-_]*[A-Z]*[a-z]+)*$"
    },
    "definitions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "parts-of-speech": {
      "enum": [
        "Noun",
        "Pronoun",
        "Verb",
        "Adverb",
        "Adjective",
        "Preposition",
        "Conjunction",
        "Interjection"
      ]
    }
  },
  "additionalProperties": false
}
