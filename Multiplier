Number = int(input("Give me any number and I wil give you its multiplication table till 10."))
x = 1
while x<=10 :
    Product = Number*x
    print("{} X {} = {}" .format(Number,x,Product))
    x= x+1
print ("Well, here you go.")
print("If you have any other problem,contact me, OK?")
